<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务器:"
            android:layout_marginRight="10dp"
            />
        <EditText
            android:id="@+id/edt_server_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="EasyDarwin地址"
            android:textColorHint="#80000000" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="端口号:"
            android:layout_marginRight="10dp"
          />
        <EditText
            android:id="@+id/edt_server_port"
            android:layout_below="@id/edt_server_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="EasyDarwin端口（默认554）"
            android:textColorHint="#80000000" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="直播流ID:"
            android:layout_marginRight="10dp"
            />
        <EditText
            android:id="@+id/edt_stream_id"
            android:layout_below="@id/edt_server_port"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="直播流ID"
            android:textColorHint="#80000000" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="录播名称:"
            android:layout_marginRight="10dp"
            />
        <EditText
            android:id="@+id/edt_record_name"
            android:layout_below="@id/edt_stream_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="录播名称"
            android:textColorHint="#80000000" />

    </LinearLayout>





    <Button
        android:id="@+id/btn_save"
        android:layout_below="@id/edt_record_name"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="保存" />

</LinearLayout>
